            //
            // htmlCourseStudentStateHistory += "<td><a href=" + url + "><button type=" + "\"button\" " + "class=" + "\"btn btn-primary\"" + ">Add course for student</button></a></td>" + "</tr>";
            courseStudentStateHistory.innerHTML += htmlCurrentCourseStudentStateName +
