{% extends "base.html.twig" %}

{% block body %}

    <div class="page-header">
        <h2 class = "header">Edit Faculties</h2>
    </div>

    <ul>
    {% for faculty in faculties %}
        <li>{{faculty.shortname}} - {{ faculty.name }}</li> <a href="{{ path('editFaculty', { 'id':faculty.id} ) }}">Edit</a> <a href="{{ path('deleteFaculty', { 'id':faculty.id} ) }}">Delete</a>
    {% endfor %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    </ul>
{% endblock %}